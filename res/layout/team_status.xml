<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/score_match_item_rect" >

    <RelativeLayout
        android:id="@+id/team_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp" >

        <TextView
            android:id="@+id/team_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:textColor="@color/text_dark_gray"
            android:textSize="11dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/cards_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/team_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp" >

        <TextView
            android:id="@+id/yellow_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/yellowcard"
            android:drawablePadding="3dp"
            android:text="0"
            android:textColor="@color/text_light_gray"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/red_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@id/yellow_card"
            android:drawableLeft="@drawable/redcard"
            android:drawablePadding="3dp"
            android:text="0"
            android:textColor="@color/text_light_gray"
            android:textSize="10dp" />
    </RelativeLayout>

</RelativeLayout>